        "/sessions": {
          "post": {
            "tags": [
              "Create Mentorship session"
            ],
            "summary": "Create mentorship session",
            "description": "",
            "operationId": "create sessions",
            "produces": [
              "application/json"
            ],
            "parameters": [
              {
                "name": "authorization",
                "in": "header",
                "required": true,
                "type": "string",
                "description": "The token must be provide in this box "
               },
              {
                "in": "body",
                "name": "body",
                "description": "Created session object",
                "required": true,
                "schema": {
                  "$ref": "#/definitions/sessions"
                }
              }
            ],
            "responses": {
              "201": {
                "description": "sessions created successfully",
                "schema":{
                  "type":"object",
                  "example": {
                    "status": 200,
                    "data": {
                        "Sessionid": 1,
                        "mentorId": 4,
                        "menteeId": 5,
                        "questions": "ffffffffffffffff",
                        "status": "pending"
                    }
                  }
                }
              },
              "404":{
                "description": "Such mentor is not found"
              },
              "401":{
                "description": "token not providen"
              }
              
            }
          }
        },
        "/sessions/<:id>/accept": {
          "patch": {
            "tags": [
              "Accept Mentorship session"
            ],
            "summary": "reject mentorship request",
            "description": "",
            "operationId": "acceptRequest",
            "produces": [
              "application/json"
            ],
            "parameters": [
              {
                "name": "authorization",
                "in": "header",
                "required": true,
                "type": "string",
                "description": "The token must be providen in this box "
               },
              {
                "in": "path",
                "name": "id",
                "description": "acccept mentorship request",
                "required": true
              }
            ],
            "responses": {
              "201": {
                "description": "accepted mentorship successfully",
                "schema":{
                  "example":{
                    "status": 200,
                    "data": {
                        "Sessionid": 2,
                        "mentorId": 3,
                        "menteeId": 1,
                        "questions": "ffffffffffffffff",
                        "menteeEmail": "amanidiope@gmail.com",
                        "status": "accepted"
                    }
                  }
                }
              },
              "404":{
                "description": "Session not found"
              },
              
              "401":{
                "description": "you are not a mentor"
              },
              "400":{
                "description": "bad request"
              }
               
              
            }
          }
        },
        "/sessions/<:id>/reject": {
          "patch": {
            "tags": [
              "Reject Mentorship session"
            ],
            "summary": "reject mentorship request",
            "description": "",
            "operationId": "rejectRequest",
            "produces": [
              "application/json"
            ],
            "parameters": [
              {
                "name": "authorization",
                "in": "header",
                "required": true,
                "type": "string",
                "description": "The token to provide in this box must start with adminToken then space"
               },
              {
                "in": "path",
                "name": "id",
                "description": "acccept mentorship request",
                "required": true
              }
            ],
            "responses": {
              "201": {
                "description": "rejected mentorship successfully",
                "schema":{
                  "example":{
                    "status": 200,
                    "data": {
                        "Sessionid": 2,
                        "mentorId": 3,
                        "menteeId": 1,
                        "questions": "ffff",
                        "menteeEmail": "amanidiope@gmail.com",
                        "status": "reject"
                    }
                  }
                }
              },
              "404":{
                "description": "Session not found"
              },
              
              "401":{
                "description": "you are not a mentor"
              },
              "400":{
                "description": "bad request"
              }
            }
          }
        }
