      "/user/<:id:>": {
          "patch": {
            "tags": [
              "Change user to Mentor"
            ],
            "summary": "change user to mentor",
            "description": "",
            "operationId": "getuserById",
            "produces": [
              "application/json"
            ],
            "parameters": [
              {
                "name": "id",
                "in": "path",
                "description": "ID of the user",
                "required": true,
                "type": "integer",
                "format": "int64"
              },
              {
                "name": "authorization",
                "in": "header",
                "required": true,
                "type": "string",
                "description": "The token must be providen in request header"
               }
            ],
            "responses": {
              "200": {
                "description": "User account changed to mentor",
                "schema":{
                  "type": "object",
                  "example":{
                    "status": 200,
                    "data": {
                        "message": "User account changed to mentor",
                        "id": 2,
                        "first_name": "habimana",
                        "last_name": "emmy",
                        "email": "amani@gmail.com",
                        "address": "kigali",
                        "bio": "doctor",
                        "status": "mentor",
                        "occupation": "doctor",
                        "expertise": "doctor"
                    }
                  }
                }
              },
              "403": {
                "description": "you are not an admin"
              },
              "404": {
                "description": "user not found"
              }
            }
          }
        },
        "/mentors": {
          "get": {
            "tags": [
              "view all Mentors"
            ],
            "summary": "Returns all mentors",
