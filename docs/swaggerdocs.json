              },
              "404":{
                "description": "no mentor found"
              }
            }
          }
        },
        "/mentors<:id>": {
          "get": {
            "tags": [
              "Specific mentor"
            ],
            "summary": "Returns one mentor",
            "description": " ",
            "operationId": "getmentor",
            "produces": [
              "application/json"
            ],
            "parameters": [
              {
                "name": "id",
                "in": "path",
                "description": "ID of the mentor",
                "required": true,
                "type": "integer",
                "format": "int64"
              },
              {
                "name": "authorization",
                "in": "header",
                "required": true,
                "type": "string",
                "description": "The token must be provided in this box"
               }
            ],
            "responses": {
              "200": {
                "description": "specific mentor",
                "schema": {
                  "type": "object",
